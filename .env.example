# Configuration Billit API
BILLIT_API_URL=https://my.billit.eu/api
BILLIT_API_KEY=votre_api_key_billit
# BILLIT_PARTY_ID=votre_party_id (optionnel)

# Configuration Telegram Bot
TELEGRAM_BOT_TOKEN=votre_bot_token
TELEGRAM_CHAT_ID=votre_chat_id

# SÉCURITÉ: Liste des chat IDs autorisés (séparés par des virgules)
# Si non spécifié, TELEGRAM_CHAT_ID sera utilisé par défaut
# Exemple: TELEGRAM_ALLOWED_CHAT_IDS=123456789,987654321
TELEGRAM_ALLOWED_CHAT_IDS=votre_chat_id

# Configuration Groq (pour reconnaissance vocale et IA)
GROQ_API_KEY=votre_groq_api_key

# Intervalle de vérification (en millisecondes)
# 60000 = 1 minute, 300000 = 5 minutes
CHECK_INTERVAL=300000

# Configuration de sécurité (IMPORTANT pour la production)
# VERBOSE_ERRORS: Afficher les messages d'erreur détaillés (true) ou génériques (false)
# Recommandé: false en production, true en développement
VERBOSE_ERRORS=false

# MAX_INPUT_LENGTH: Longueur maximale des entrées utilisateur (en caractères)
# Protège contre les abus et les tentatives d'injection
MAX_INPUT_LENGTH=500

# ============================================
# MONITORING AUTOMATIQUE DES FACTURES
# ============================================

# INVOICE_MONITORING_ENABLED: Active le monitoring automatique des nouvelles factures
# Le bot vérifiera régulièrement les nouvelles factures et vous enverra une notification
# Recommandé: true pour ne rien manquer
INVOICE_MONITORING_ENABLED=true

# INVOICE_MONITORING_INTERVAL: Intervalle de vérification en minutes
# Combien de temps entre chaque vérification des nouvelles factures
# Valeurs recommandées: 5 (rapide), 15 (normal), 30 (économique)
INVOICE_MONITORING_INTERVAL=5

# INVOICE_MONITORING_CHECK_PAID: Vérifier les nouvelles factures payées
# true = notifier pour les factures payées, false = ignorer les factures payées
INVOICE_MONITORING_CHECK_PAID=true

# INVOICE_MONITORING_CHECK_UNPAID: Vérifier les nouvelles factures impayées
# true = notifier pour les factures impayées, false = ignorer les factures impayées
INVOICE_MONITORING_CHECK_UNPAID=true

# INVOICE_MONITORING_STORAGE: Fichier de stockage des factures traitées
# Ce fichier permet de ne pas renvoyer les mêmes notifications
# Ne modifiez pas ce paramètre sauf si vous savez ce que vous faites
INVOICE_MONITORING_STORAGE=./data/processed-invoices.json
