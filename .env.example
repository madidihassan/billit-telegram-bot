# ============================================
# Billit Bot - Configuration Example
# ============================================
# Copiez ce fichier en .env et .env.mustfood avec les valeurs appropriées

# Configuration Billit API
BILLIT_API_URL=https://api.billit.be
BILLIT_API_KEY=your_api_key_here
BILLIT_PARTY_ID=your_party_id_here

# Configuration Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_default_chat_id

# Chat IDs autorisés (séparés par des virgules)
TELEGRAM_ALLOWED_CHAT_IDS=chat_id1,chat_id2,chat_id3

# Intervalle de vérification (en millisecondes)
# 60000 = 1 minute, 300000 = 5 minutes
CHECK_INTERVAL=300000

# Configuration Groq (pour reconnaissance vocale et IA)
GROQ_API_KEY=your_groq_api_key_here

# Configuration OpenRouter (alternative à Groq - prioritaire si configuré)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-4o-mini

# Configuration de sécurité
# VERBOSE_ERRORS: false = messages génériques, true = détails techniques
VERBOSE_ERRORS=false

# MAX_INPUT_LENGTH: Longueur maximale des messages utilisateur
MAX_INPUT_LENGTH=500

# ============================================
# MONITORING AUTOMATIQUE DES FACTURES
# ============================================
INVOICE_MONITORING_ENABLED=true
INVOICE_MONITORING_INTERVAL=5
INVOICE_MONITORING_CHECK_PAID=true
INVOICE_MONITORING_CHECK_UNPAID=true
INVOICE_MONITORING_STORAGE=./data/processed-invoices.json

# ============================================
# SOLDES BANCAIRES INITIAUX
# ============================================
# Format: IBAN|Nom de la banque|Solde initial
# Séparez plusieurs comptes par des points-virgules
BANK_ACCOUNTS=BE07671870399966|Europabank|80075.06;BE12001745766792|BNP Paribas Fortis|17565.13;BE13363151562439|ING|6714.29
